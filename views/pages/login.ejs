<div class="text-center p-5">

    <form class="form-signin p-5 fadeIn" method="post" action="/login">
        <img class="mb-4" src="https://raw.githubusercontent.com/dennysjmarquez/portfolio/gh-pages/me.jpg" alt=""
             width="72" height="72">
        <div class="mb-3">
            <h1 class="h3 mb-3 font-weight-normal">Por favor, identif&iacutecate</h1>
            <div class="group-inputs-form">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" name="email" class="form-control"
                       placeholder="dennysjmarquez@gmail.com"
                       required=""
                       autofocus="" value="dennysjmarquez@gmail.com">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="123456"
                       required=""
                       autocomplete="nop" value="123456">
            </div>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

        <% if (error) { %>
        <div class="alert autoHide alert-danger mb-0 mt-3" role="alert">
            Error:
            <%= missingData ? 'Faltan datos' : '' %>
            <%= notUser ? 'El usuario no existe' : '' %>
        </div>
        <% } %>

    </form>

</div>
